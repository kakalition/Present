{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "declaration": false,
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}